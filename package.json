{
  "name": "soeji",
  "version": "1.0.0",
  "description": "Image metadata management system with PNG comment extraction",
  "private": true,
  "workspaces": [
    "watcher",
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:watcher": "npm run dev -w @soeji/watcher",
    "dev:backend": "npm run dev -w @soeji/backend",
    "dev:frontend": "npm run dev -w @soeji/frontend",
    "build": "npm-run-all build:*",
    "build:watcher": "npm run build -w @soeji/watcher",
    "build:backend": "npm run build -w @soeji/backend",
    "build:frontend": "npm run build -w @soeji/frontend",
    "test": "npm-run-all test:*",
    "test:watcher": "npm run test:run -w @soeji/watcher",
    "test:backend": "npm run test:run -w @soeji/backend"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
