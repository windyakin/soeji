# Database
POSTGRES_USER="soeji"
POSTGRES_PASSWORD="soeji"
POSTGRES_DB="soeji"
DATABASE_URL="postgresql://soeji:soeji@postgres:5432/soeji?schema=public"

# RustFS (S3-compatible)
S3_ENDPOINT="http://rustfs:9000"
S3_PUBLIC_ENDPOINT="http://localhost:9080"
S3_ACCESS_KEY="rustfsadmin"
S3_SECRET_KEY="rustfsadmin"
S3_BUCKET="soeji-images"
S3_REGION="us-east-1"

RUSTFS_VOLUMES=/data
RUSTFS_ADDRESS="0.0.0.0:9000"
RUSTFS_CONSOLE_ADDRESS="0.0.0.0:9001"
RUSTFS_CONSOLE_ENABLE="true"
RUSTFS_ACCESS_KEY=rustfsadmin
RUSTFS_SECRET_KEY=rustfsadmin

# Meilisearch
MEILISEARCH_HOST="http://meilisearch:7700"
MEILISEARCH_API_KEY="masterKey"

# Watch directory
WATCH_DIR=/data/images
DELETE_AFTER_PROCESS=false

# converter
CONVERTER_PORT="8000"
WEBP_DEFAULT_QUALITY="85"
MAX_DIMENSION="4096"
RUST_LOG=soeji_converter=info,tower_http=info

# Authentication (optional - defaults to disabled)
# Set AUTH_ENABLED=true to require login
AUTH_ENABLED=false
SETUP_KEY="setup-key-change-me"
JWT_SECRET="your-super-secret-jwt-key-at-least-32-characters"
JWT_ACCESS_TOKEN_EXPIRES="15m"
JWT_REFRESH_TOKEN_EXPIRES_DAYS="7"
